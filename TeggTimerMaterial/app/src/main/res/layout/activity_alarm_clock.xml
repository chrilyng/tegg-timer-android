<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#444444"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AlarmClock">

            <TextView
                android:id="@+id/clock"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:background="@color/background_material_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dip"
                android:text="00:00"
                android:typeface="monospace"
                android:textColor="@color/primary_text_default_material_dark"
                />
        <FrameLayout
            android:layout_below="@id/clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/frame01"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame01_ring_bg"
                android:src="@drawable/ring_bg"
                />
            <dk.siit.tegg.view.EggView
                android:id="@+id/ring_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ring_num"
                />
        </FrameLayout>
            <Button  android:id="@+id/ring_start"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_material_dark"
                android:text="@string/alarm_start"
                android:textColor="@color/primary_text_default_material_dark"
                />

</RelativeLayout>
